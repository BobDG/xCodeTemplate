platform :ios, '8.0'
use_frameworks!
inhibit_all_warnings!

def shared_pods
    pod 'Blaze'
    pod 'BDGShare'
    pod 'BDGViews'
    pod 'BDGMacros'
    pod 'BDGCategories'
    pod 'BDGScreenshot'
    
    pod 'AFNetworking'
    pod 'SVProgressHUD'
    pod 'HockeySDK-Source'
end

target 'Template' do
    shared_pods
end

target 'Template AppStore' do
    shared_pods
end
